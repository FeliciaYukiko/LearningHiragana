<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main4Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Lesson 3"
                android:textSize="40sp" />

            <Button
                android:id="@+id/shashusho"
                android:layout_width="320dp"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/shashusho"
                android:textSize="30sp"
                android:layout_marginStart="20dp" />

            <Button
                android:id="@+id/jajujo"
                android:layout_width="320dp"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/jajujo"
                android:textSize="35sp" />

            <Button
                android:id="@+id/chachucho"
                android:layout_width="320dp"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/chachucho"
                android:textSize="30sp"
                android:layout_marginStart="20dp" />

            <Button
                android:id="@+id/nyanyunyo"
                android:layout_width="320dp"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/nyanyunyo"
                android:textSize="30sp"
                android:layout_marginStart="20dp" />

            <Button
                android:id="@+id/hyahyuhyo"
                android:layout_width="320dp"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/hyahyuhyo"
                android:textSize="30sp"
                android:layout_marginStart="20dp" />

            <Button
                android:id="@+id/byabyubyo"
                android:layout_width="320dp"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/byabyubyo"
                android:textSize="30sp"
                android:layout_marginStart="20dp" />

            <Button
                android:id="@+id/ryaryuryo"
                android:layout_width="320dp"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/ryaryuryo"
                android:textSize="30sp"
                android:layout_marginStart="20dp" />

            <Button
                android:id="@+id/pyapyupyo"
                android:layout_width="320dp"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/pyapyupyo"
                android:textSize="30sp"
                android:layout_marginStart="20dp" />

            <Button
                android:id="@+id/myamyumyo"
                android:layout_width="320dp"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/myamyumyo"
                android:textSize="30sp"
                android:layout_marginStart="20dp" />

            <Button
                android:id="@+id/home"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/home"
                android:textSize="30sp"
                android:layout_marginStart="140dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>